<% provide :title, t(".title") %>
<div class= "about">

  <div class="jumbotron text-center">
    <h1><%= t(".jumbotron")[0] %></h1>
    <p><%= t(".jumbotron")[1] %></p>
    <form class="form-inline">
      <div class="input-group">
        <input type="email" class="form-control" size="50" placeholder="Email..." required>
        <div class="input-group-btn">
          <button type="button" class="btn btn-danger">
            <%= t(".jumbotron")[2] %>
          </button>
        </div>
      </div>
    </form>
  </div>

  <div class="container-fluid">
    <div class="row">
      <div class="col-sm-8">
        <h2><%= t(".container1")[0] %></h2>
        <h4><%= t(".container1")[1] %></h4>
        <p><%= t(".container1")[2] %></p>
        <button class="btn btn-default btn-lg">
          <%= t(".container1")[3] %>
        </button>
      </div>
      <div class="col-sm-4">
        <span class="glyphicon glyphicon-signal logo"></span>
      </div>
    </div>
  </div>

  <div class="container-fluid bg-grey">
    <div class="row">
      <div class="col-sm-4">
        <span class="glyphicon glyphicon-globe logo"></span>
      </div>
      <div class="col-sm-8">
        <h2><%= t(".container_member1")[0] %></h2>
        <%= raw t(".container_member1")[1] %>
        <%= raw t(".container_member1")[2] %>
      </div>
    </div>
  </div>

  <div class="container-fluid bg-grey">
    <div class="row">
      <div class="col-sm-4">
        <span class="glyphicon glyphicon-globe logo"></span>
      </div>
      <div class="col-sm-8">
        <h2><%= t(".container_member2")[0] %></h2>
        <%= raw t(".container_member2")[1] %>
        <%= raw t(".container_member2")[2] %>
      </div>
    </div>
  </div>
</div>
