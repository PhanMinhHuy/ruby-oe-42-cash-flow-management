<h1 class="text-center"><%= t ".title" %></h1>
<% @shared_plans.each do |shared_plan| %>
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">
        <b><%= t("spending_plans.spending_plan.label")[0]%><%= shared_plan.name.capitalize %></b>
        <br>
        <b><%= t ".owner" %>: <%= shared_plan.user.email %></b>
      </h3>
    </div>
    <div class="panel-body">
      <b><%= t("spending_plans.spending_plan.label")[2]%> </b><%= shared_plan.budget.name.capitalize %>
      <br>
      <b><%= t("spending_plans.spending_plan.label")[1]%> </b><%= shared_plan.plan_type.capitalize %>
      <br>
      <b><%= t("spending_plans.spending_plan.label")[3]%> </b>
      <%= number_to_currency(shared_plan.total_money, dilimiter: ",") %>
      <br>
      <small>
        <i><%= t("spending_plans.spending_plan.label")[4]%>
          <%= l shared_plan.start_date %> ->
          <%= l shared_plan.end_date %>
        </i>
      </small>
    </div>
  </div>
<% end %>
<%= will_paginate @shared_plans, previous_label: t("will_paginate.previous"), next_label: t("will_paginate.next") %>
